<div class='container col-6 card p-3 my-3 pt-10'>
  <h2>Enter information about your van!</h2>

  <%= simple_form_for(@van) do |f| %>

    <div class="form-inputs">
      <%= f.input :brand %>
      <%= f.input :model %>
      <%= f.input :capacity %>
      <%= f.input :day_price %>
      <%= f.input :address %>
      <%= f.input :description, as: :text  %>
      <%= f.input :photo, as: :file%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Register your van", class: "btn-flat" %>
    </div>
  <% end %>
</div>
